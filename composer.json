{
	"name": "kollarovic/shopping-cart",
	"description": "Shopping Cart for Nette",
	"keywords": ["nette", "cart", "shop", "shopping"],
	"license": "MIT",

	"authors": [
		{
			"name": "Mario Kollarovic",
			"email": "kollarovic@gmail.com"
		}
	],

	"require": {
		"php": ">=7.1",
		"nette/application": "^3.0",
		"nette/bootstrap": "^3.0",
		"nette/robot-loader": "^3.0",
		"nette/utils": "^3.0",
		"nette/forms": "^3.0",
		"latte/latte": "^2.5",
		"kollarovic/thumbnail": "~3.0"
	},

	"require-dev": {
		"nette/tester": "~1.3",
		"phpstan/phpstan": "^0.11.8",
		"phpstan/phpstan-nette": "^0.11.1"
	},

	"autoload": {
		"psr-0": {
			"Kollarovic\\ShoppingCart": "src/"
		}
	},

	"scripts": {
		"phpstan": "vendor/bin/phpstan analyse -c phpstan.neon src --level 7",
		"test": "vendor/bin/tester tests"
	}

}
